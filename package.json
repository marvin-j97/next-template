{
  "name": "next-template",
  "version": "1.0.0",
  "main": "build/server.js",
  "repository": "https://github.com/marvin-j97/next-template.git",
  "author": "marvin-j97 <33938500+marvin-j97@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "start": "node build/server",
    "start:prod": "dotenv -e .env -e .env.production -- cross-env NODE_ENV=production node build/server",
    "start:dev": "dotenv -e .env -e .env.development -- cross-env NODE_ENV=development node build/server",
    "dev": "dotenv -e .env -e .env.development -- cross-env NODE_ENV=development nodemon build/server",
    "watch:server": "tsc -w -p tsconfig.server.json",
    "lint": "eslint \"*/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"*/**/*.{ts,tsx}\" --fix",
    "lint:style": "npx stylelint **/*.{css,scss}",
    "lint:style:fix": "npx stylelint **/*.{css,scss} --fix",
    "test": "dotenv -e .env -e .env.test -- cross-env NODE_ENV=test TS_NODE_PROJECT=tsconfig.test.json mocha",
    "coverage": "nyc yarn test",
    "postcoverage": "nyc report --reporter=json",
    "build": "yarn build:server && yarn build:next",
    "build:server": "tsc -p tsconfig.server.json",
    "build:next": "next build --debug"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.3",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/chai": "^4.3.0",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa__router": "^8.0.11",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.13",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/parser": "^5.13.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^37.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "mocha": "^9.2.0",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "stylelint": "^14.3.0",
    "stylelint-config-standard": "^24.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@koa/router": "^10.1.1",
    "dotenv-cli": "^4.1.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "next": "^12.0.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
